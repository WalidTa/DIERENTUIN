@model WebApplication1.Models.Animal
@using WebApplication1.Models

@{
    ViewData["Title"] = "Create Animal";
}

<div class="mb-4">
    <h1>🦁 Create New Animal</h1>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Species" class="form-label"></label>
                    <input asp-for="Species" class="form-control" />
                    <span asp-validation-for="Species" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CategoryId" class="form-label">Category</label>
                    <select asp-for="CategoryId" class="form-select" asp-items="@((SelectList)ViewData["CategoryList"])">
                        <option value="">-- Select Category --</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="EnclosureId" class="form-label">Enclosure</label>
                    <select asp-for="EnclosureId" class="form-select" asp-items="@((SelectList)ViewData["EnclosureList"])">
                        <option value="">-- Select Enclosure --</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Size" class="form-label"></label>
                    <select asp-for="Size" class="form-select" asp-items="Html.GetEnumSelectList<Animal.SizeEnum>()">
                        <option value="">-- Select Size --</option>
                    </select>
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="DietaryClass" class="form-label"></label>
                    <select asp-for="DietaryClass" class="form-select" asp-items="Html.GetEnumSelectList<Animal.Diet>()">
                        <option value="">-- Select Diet --</option>
                    </select>
                    <span asp-validation-for="DietaryClass" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="ActivityPattern" class="form-label"></label>
                    <select asp-for="ActivityPattern" class="form-select" asp-items="Html.GetEnumSelectList<Animal.Activity>()">
                        <option value="">-- Select Activity --</option>
                    </select>
                    <span asp-validation-for="ActivityPattern" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Prey" class="form-label"></label>
                    <input asp-for="Prey" class="form-control" />
                    <span asp-validation-for="Prey" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="SpaceRequirement" class="form-label"></label>
                    <input asp-for="SpaceRequirement" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="SpaceRequirement" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="SecurityRequirement" class="form-label"></label>
                    <select asp-for="SecurityRequirement" class="form-select" asp-items="Html.GetEnumSelectList<SecurityLevel>()">
                        <option value="">-- Select Security --</option>
                    </select>
                    <span asp-validation-for="SecurityRequirement" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-success">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
