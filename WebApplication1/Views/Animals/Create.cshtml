@model WebApplication1.Models.Animal
@using WebApplication1.Models

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Species" class="control-label"></label>
                <input asp-for="Species" class="form-control" />
                <span asp-validation-for="Species" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <select asp-for="Size" class="form-control" asp-items="Html.GetEnumSelectList<Animal.SizeEnum>()">
                    <option value="">-- Select Size --</option>
                </select>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DietaryClass" class="control-label"></label>
                <select asp-for="DietaryClass" class="form-control" asp-items="Html.GetEnumSelectList<Animal.Diet>()">
                    <option value="">-- Select Dietary Class --</option>
                </select>
                <span asp-validation-for="DietaryClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityPattern" class="control-label"></label>
                <select asp-for="ActivityPattern" class="form-control" asp-items="Html.GetEnumSelectList<Animal.Activity>()">
                    <option value="">-- Select Activity Pattern --</option>
                </select>
                <span asp-validation-for="ActivityPattern" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prey" class="control-label"></label>
                <input asp-for="Prey" class="form-control" />
                <span asp-validation-for="Prey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpaceRequirement" class="control-label"></label>
                <input asp-for="SpaceRequirement" class="form-control" />
                <span asp-validation-for="SpaceRequirement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecurityRequirement" class="control-label"></label>
                <select asp-for="SecurityRequirement" class="form-control" asp-items="Html.GetEnumSelectList<SecurityLevel>()">
                    <option value="">-- Select Security Requirement --</option>
                </select>
                <span asp-validation-for="SecurityRequirement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="@((SelectList)ViewData["CategoryList"])">
                    <option value="">-- Select Category --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="EnclosureId" class="control-label"></label>
                <select asp-for="EnclosureId" class ="form-control" asp-items="@((SelectList)ViewData["EnclosureList"])">
                <option value="">-- Select Category --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
