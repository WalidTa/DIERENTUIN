@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Animals";
    var searchTerm = ViewData["SearchTerm"] as string ?? "";
}

<h1>Animals</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" value="@searchTerm" class="form-control" placeholder="Search by name, species, category, enclosure, prey, or status..." />
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="Index" class="btn btn-secondary">Clear</a>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Species</th>
            <th>Category</th>
            <th>Enclosure</th>
            <th>Size</th>
            <th>Diet</th>
            <th>Activity</th>
            <th>Prey</th>
            <th>Space Req.</th>
            <th>Security Req.</th>
            <th>Status</th>
            <th style="width: 260px;">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Name</td>
            <td>@item.Species</td>
            <td>@item.CategoryName</td>
            <td>@item.EnclosureName</td>
            <td>@item.Size</td>
            <td>@item.DietaryClass</td>
            <td>@item.ActivityPattern</td>
            <td>@item.Prey</td>
            <td>@item.SpaceRequirement</td>
            <td>@item.SecurityRequirement</td>
            <td>@item.Status</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                <a asp-action="Sunrise" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Sunrise</a>
                <a asp-action="Sunset" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Sunset</a>
                <a asp-action="FeedingTime" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Feeding</a>
                <a asp-action="CheckConstraints" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Constraints</a>
            </td>
        </tr>
}
    </tbody>
</table>
