@model WebApplication1.Models.Animal

@{
    ViewData["Title"] = "Delete Animal";
}

<div class="mb-4">
    <h1>Delete Animal</h1>
    <h3 class="text-muted">Are you sure you want to delete @Model.Name the @Model.Species?</h3>
</div>

<div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 text-muted">Name</dt>
            <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

            <dt class="col-sm-3">Species</dt>
            <dd class="col-sm-9">@Model.Species</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">
                @if (Model?.Category != null)
                {
                    <span class="badge bg-secondary">@Model.Category.Name</span>
                }
                else
                {
                    <span class="text-muted">No category</span>
                }
            </dd>

            <dt class="col-sm-3">Enclosure</dt>
            <dd class="col-sm-9">
                @if (Model?.Enclosure != null)
                {
                    <span class="badge bg-info">@Model.Enclosure.Name</span>
                }
                else
                {
                    <span class="text-muted">No enclosure</span>
                }
            </dd>

            <dt class="col-sm-3">Size</dt>
            <dd class="col-sm-9">@Model.Size</dd>

            <dt class="col-sm-3">Dietary Class</dt>
            <dd class="col-sm-9">@Model.DietaryClass</dd>

            <dt class="col-sm-3">Prey</dt>
            <dd class="col-sm-9">@(Model.Prey ?? "-")</dd>

            <dt class="col-sm-3">Activity Pattern</dt>
            <dd class="col-sm-9">@Model.ActivityPattern</dd>

            <dt class="col-sm-3">Space Requirement</dt>
            <dd class="col-sm-9">@Model.SpaceRequirement</dd>

            <dt class="col-sm-3">Security Requirement</dt>
            <dd class="col-sm-9">@Model.SecurityRequirement</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
