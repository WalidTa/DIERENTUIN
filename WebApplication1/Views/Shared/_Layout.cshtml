<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Virtual Zoo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark zoo-navbar">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    🦁 VIRTUELE DIERENTUIN
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <span class="nav-icon">🏠</span> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Animals" asp-action="Index">
                                <span class="nav-icon">🦁</span> Animals
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Categories" asp-action="Index">
                                <span class="nav-icon">🏷️</span> Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Enclosures" asp-action="Index">
                                <span class="nav-icon">🏠</span> Enclosures
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle zoo-actions-dropdown" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="nav-icon">🎮</span> Zoo Actions
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end zoo-dropdown" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Zoos" asp-action="Sunrise">☀️ Sunrise</a></li>
                                <li><a class="dropdown-item" asp-controller="Zoos" asp-action="Sunset">🌙 Sunset</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Zoos" asp-action="FeedingTime">🍖 Feeding Time</a></li>
                                <li><a class="dropdown-item" asp-controller="Zoos" asp-action="CheckConstraints">✅ Check Constraints</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item zoo-special-action" asp-controller="Zoos" asp-action="AutoAssign">🎯 Auto Assign</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
