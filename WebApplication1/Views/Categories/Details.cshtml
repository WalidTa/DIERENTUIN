@model WebApplication1.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="mb-4">
    <h1>🏷️ @Model.Name</h1>
    <p class="text-muted">Category Details</p>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

            <dt class="col-sm-3">Animal Count</dt>
            <dd class="col-sm-9"><span class="badge bg-info">@Model.Animals.Count animals</span></dd>
        </dl>
    </div>
</div>

@if (Model.Animals.Any())
{
    <div class="card shadow-sm mt-4">
        <div class="card-header">
            <h5 class="mb-0">Animals in this Category</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Species</th>
                            <th>Enclosure</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var animal in Model.Animals)
                        {
                            <tr>
                                <td><strong>@animal.Name</strong></td>
                                <td>@animal.Species</td>
                                <td>
                                    @if (animal.Enclosure != null)
                                    {
                                        <span class="badge bg-secondary">@animal.Enclosure.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No enclosure</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="AssignAnimals" asp-route-id="@Model.Id" class="btn btn-success">Assign Animals</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
