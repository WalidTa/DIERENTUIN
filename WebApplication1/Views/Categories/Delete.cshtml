@model WebApplication1.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="mb-4">
    <h1>🗑️ Delete Category</h1>
    <p class="text-muted">Are you sure you want to delete this category?</p>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

            <dt class="col-sm-3">Animal Count</dt>
            <dd class="col-sm-9"><span class="badge bg-info">@Model.Animals.Count animals</span></dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
