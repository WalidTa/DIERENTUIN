@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Categories";
    var searchTerm = ViewData["SearchTerm"] as string ?? "";
}

<div class="mb-4">
    <h1>🏷️ Categories</h1>
    <p class="text-muted">Manage all categories in your zoo</p>
</div>

<div class="card mb-3 bg-transparent border">
    <div class="card-body bg-transparent">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="searchTerm" value="@searchTerm" class="form-control bg-transparent text-white" placeholder="Search categories..." />
                <button type="submit" class="btn btn-primary">Search</button>
                <a asp-action="Index" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">+ Create New Category</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Animal Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model)
    {
            <tr>
                <td><strong>@item.Name</strong></td>
                <td><span class="badge bg-info">@item.AnimalCount animals</span></td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton@(item.Id)" data-bs-toggle="dropdown" aria-expanded="false">
                            ⋮
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton@(item.Id)">
                            <li><h6 class="dropdown-header">Manage</h6></li>
                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">📋 Details</a></li>
                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">✏️ Edit</a></li>
                            <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">🗑️ Delete</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><h6 class="dropdown-header">Actions</h6></li>
                            <li><a class="dropdown-item" asp-action="AssignAnimals" asp-route-id="@item.Id">🦁 Assign Animals</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <strong>No categories found.</strong> Try a different search or create a new category.
    </div>
}
