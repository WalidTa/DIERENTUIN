@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Categories";
    var searchTerm = ViewData["SearchTerm"] as string ?? "";
}

<h1>Categories</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" value="@searchTerm" class="form-control" placeholder="Search by category name..." />
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="Index" class="btn btn-secondary">Clear</a>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Animal Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Name</td>
            <td>@item.AnimalCount</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                <a asp-action="AssignAnimals" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Assign Animals</a>
            </td>
        </tr>
}
    </tbody>
</table>
