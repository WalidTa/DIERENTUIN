@model WebApplication1.Models.Enclosure

@{
    ViewData["Title"] = "Delete Enclosure";
}

<div class="mb-4">
    <h1>🗑️ Delete Enclosure</h1>
    <p class="text-muted">Are you sure you want to delete this enclosure?</p>
</div>

@if (Model.Animals.Any())
{
    <div class="alert alert-warning">
        <strong>Important!</strong> This enclosure has @Model.Animals.Count animal(s). Deleting it will leave these animals without an enclosure!
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

            <dt class="col-sm-3">Security Level</dt>
            <dd class="col-sm-9">
                @if (Model.SecurityLevel == WebApplication1.Models.SecurityLevel.Low)
                {
                    <span class="badge bg-success">Low</span>
                }
                else if (Model.SecurityLevel == WebApplication1.Models.SecurityLevel.Medium)
                {
                    <span class="badge bg-warning text-dark">Medium</span>
                }
                else
                {
                    <span class="badge bg-danger">High</span>
                }
            </dd>

            <dt class="col-sm-3">Size</dt>
            <dd class="col-sm-9">@Model.Size sq meters</dd>

            <dt class="col-sm-3">Habitat</dt>
            <dd class="col-sm-9">@Model.Habitat</dd>

            <dt class="col-sm-3">Climate</dt>
            <dd class="col-sm-9">@Model.Climate</dd>

            <dt class="col-sm-3">Animals Assigned</dt>
            <dd class="col-sm-9"><span class="badge bg-info">@Model.Animals.Count animals</span></dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
