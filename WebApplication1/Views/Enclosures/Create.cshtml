@model WebApplication1.Models.Enclosure
@using WebApplication1.Models

@{
    ViewData["Title"] = "Create Enclosure";
}

<div class="mb-4">
    <h1>🏠 Create New Enclosure</h1>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter enclosure name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Size" class="form-label"></label>
                    <input asp-for="Size" class="form-control" type="number" step="0.01" placeholder="Size in square meters" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="SecurityLevel" class="form-label"></label>
                    <select asp-for="SecurityLevel" class="form-select" asp-items="Html.GetEnumSelectList<SecurityLevel>()">
                        <option value="">-- Select Security Level --</option>
                    </select>
                    <span asp-validation-for="SecurityLevel" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Habitat" class="form-label"></label>
                    <select asp-for="Habitat" class="form-select" asp-items="Html.GetEnumSelectList<Enclosure.HabitatEnum>()">
                        <option value="">-- Select Habitat --</option>
                    </select>
                    <span asp-validation-for="Habitat" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Climate" class="form-label"></label>
                    <select asp-for="Climate" class="form-select" asp-items="Html.GetEnumSelectList<Enclosure.ClimateEnum>()">
                        <option value="">-- Select Climate --</option>
                    </select>
                    <span asp-validation-for="Climate" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-success">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
